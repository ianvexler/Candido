generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int             @id @default(autoincrement())
  email           String          @unique
  name            String?
  password        String?
  jobBoardEntries JobBoardEntry[]
  jobBoardTags    JobBoardTag[]
  sessions        Session[]
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([token])
}

model JobBoardEntry {
  id                  Int           @id @default(autoincrement())
  title               String
  location            String?
  description         String?
  salary              String?
  url                 String?
  number              Int
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  status              JobStatus     @default(PENDING)
  userId              Int
  company             String
  coverLetterText     String?
  coverLetterKey      String?
  coverLetterFilename String?
  cvText              String?
  cvKey               String?
  cvFilename          String?
  user                User          @relation(fields: [userId], references: [id])
  jobBoardTags        JobBoardTag[] @relation("JobBoardEntryToJobBoardTag")

  @@unique([userId, status, number])
  @@index([title])
}

model JobBoardTag {
  id              Int             @id @default(autoincrement())
  name            String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  userId          Int
  user            User            @relation(fields: [userId], references: [id])
  jobBoardEntries JobBoardEntry[] @relation("JobBoardEntryToJobBoardTag")

  @@unique([userId, name])
  @@index([name])
}

enum JobStatus {
  PENDING
  APPLIED
  ASSESSMENT
  INTERVIEW
  OFFERED
  REJECTED
  ACCEPTED
  ARCHIVED
}
