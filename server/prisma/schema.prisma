generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                    Int       @id @default(autoincrement())
  email                 String    @unique
  name                  String?
  password              String?
  verified              Boolean   @default(false)
  verificationToken     String?
  verificationExpiresAt DateTime?
  setupCompleted        Boolean   @default(false)
  admin                 Boolean   @default(false)
  lastLoginAt           DateTime?

  jobBoardEntries       JobBoardEntry[]
  jobBoardTags          JobBoardTag[]
  sessions              Session[]
  feedbackEntries       FeedbackEntry[]
}

model Session {
  id                    Int      @id @default(autoincrement())
  userId                Int
  token                 String   @unique
  expiresAt             DateTime
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  user                  User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([token])
}

model JobBoardEntry {
  id                  Int           @id @default(autoincrement())
  title               String
  location            String?
  description         String?
  salary              String?
  url                 String?
  number              Int
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  status              JobStatus     @default(PENDING)
  userId              Int
  company             String
  coverLetterText     String?
  coverLetterKey      String?
  coverLetterFilename String?
  cvText              String?
  cvKey               String?
  cvFilename          String?
  user                User          @relation(fields: [userId], references: [id])
  jobBoardTags        JobBoardTag[] @relation("JobBoardEntryToJobBoardTag")

  @@unique([userId, status, number])
  @@index([title])
}

model JobBoardTag {
  id              Int             @id @default(autoincrement())
  name            String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  userId          Int
  user            User            @relation(fields: [userId], references: [id])
  jobBoardEntries JobBoardEntry[] @relation("JobBoardEntryToJobBoardTag")

  @@unique([userId, name])
  @@index([name])
}

model FeedbackEntry {
  id        Int             @id @default(autoincrement())
  userId    Int
  user      User            @relation(fields: [userId], references: [id])
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  title     String
  content   String
  type      FeedbackType    @default(OTHER)
  status    FeedbackStatus  @default(PENDING)
}

enum JobStatus {
  PENDING
  APPLIED
  ASSESSMENT
  INTERVIEW
  OFFERED
  REJECTED
  ACCEPTED
  ARCHIVED
}

enum FeedbackType {
  BUG
  SUGGESTION
  OTHER
}

enum FeedbackStatus {
  PENDING
  REVIEWED
  IMPLEMENTED
  CLOSED
}
