generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User { 
  id    Int     @id @default(autoincrement()) 
  email String  @unique
  name  String?
  password String?
  sessions Session[]

  jobBoardEntries JobBoardEntry[]
  jobBoardTags JobBoardTag[]
} 

model Session {
  id Int @id @default(autoincrement())
  token String @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id])
  userId Int


  @@index([userId])
  @@index([token])
}

enum JobStatus {
  PENDING
  APPLIED
  ASSESSMENT
  INTERVIEW
  OFFERED
  REJECTED
  ACCEPTED
  ARCHIVED
}

model JobBoardEntry {
  id Int @id @default(autoincrement())
  title String
  company String
  location String?
  description String?
  salary String?
  url String?
  number Int
  status JobStatus @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobBoardTags JobBoardTag[]

  user User @relation(fields: [userId], references: [id])
  userId Int

  @@unique([userId, status, number])

  @@index([title])
}

model JobBoardTag {
  id Int @id @default(autoincrement())
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id])
  userId Int

  jobBoardEntries JobBoardEntry[]

  @@index([name])
  @@unique([userId, name])
}